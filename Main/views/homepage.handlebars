

<div class = "container">
    <div class = "row justify-content-center">
        <div class="col-12 col-lg-9 center-block ">
<!--Profile Section-->
            <div class="card card-left1 mb-4">
                <!--<img src="img/photo-1455448972184-de647495d428.jpg" alt="" class="card-img-top img-fluid">-->
                <div class="card-body text-center ">
                    <!--<img src="img/avatar-dhg.png" alt="img" width="120px" height="120px" class="rounded-circle mt-n5">-->
                    <h5 class="card-title">"USER's NAME"</h5>
                    <p class="card-text justify-content-center">"USER's TEXT"</p>
                </div>
            </div>
<!--Feed-->
            <div class="middle-column">
                <div class="card">
                    <div class="card-body">
                        {{#each Posts as |Post|}}
                        <div class="media">
                            <!--<img src="img/avatar-dhg.png" alt="img" width="55px" height="55px" class="rounded-circle mr-3">-->
                            <div class="media-body">
                                <h5>{{Post.post_title}}</h5>
                                <p class="card-text text-justify">{{Post.post_content}}</p>
                                <div class="row no-gutters mb-3">
                                    <div class="col-6 p-1 text-center">
                                        <img src="img/adventure-alps-clouds-2259810.jpg" alt="" class="img-fluid mb-2" />
                                    </div>
                                </div>
                                <small class="text-end">{{format_date Post.post_date_created}}</small>
                               
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <p>{{Post.comment_content}}</p>
                                        <div class="d-flex justify-content-between">
                                            <div class="d-flex flex-row align-items-center">
                                                <img src="https://pic.onlinewebfonts.com/svg/img_569204.png" alt="avatar" width="25"
                                                    height="25" />
                                                <p class="small mb-0 ms-2">&nbsp; {{Post.comment_username}}</p>
                                            </div>
                                            <div class="d-flex flex-row align-items-center">
                                                <p class="small text-muted mb-0">{{format_date Post.post_date_created}}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                            
                        </div>
                        <hr>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>